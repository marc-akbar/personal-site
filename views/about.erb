  <div class="container">
    <div class="center-horiz">
      <h1 class="title">About</h1>
    </div>
    <img class="mountain-image" src="images/mountain_range.png" alt="mountain range graphic">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
  </div>
</div>

<section id="about-content">
  <div class="photo-background"></div>
  <div class="text-background"></div>
  <div class="row">
    <div class="col l5 push-l1">
      <div class="photo-wrapper">
        <img src="images/profile-image.png" alt="profile picture">
      </div>
    </div>
    <div class="col l6 push-l1">
      <div class="about-description">
        <div class="container">
          <h5 class="dark-teal">I write code and climb rocks.</h5>
          <p class="location-text">I live in <del>New York</del></p>
